<link rel="stylesheet" href="css/debt-everyone.css">
<link rel="stylesheet" href="css/trip-bar.css">

<div id="container">
    <div id="header">
        <!-- this shall contain the app name, and the user profile overview -->
        <%- include("navbar.ejs")%>
        <%- include("trip-bar.ejs")%>
    </div>

    <div id="body">
        <h1 id="Debt">Balance</h1>

        <div class="pay"> 
            <h2 id="pay">To pay -</h2>
            <% for (i=1; i<pay.length; i++){ %>
                <div class="debtBox"> 
                    <div class="category" style="background-color:<%=pay[0]%>"><img class="img" src="media/<%=pay[i][0]%>"></div>
                    <div class="amount-pos"><%=pay[i][1]%> $</div> 
                    <div class="date"> due since <%=pay[i][2]%> </div>
                    <div class="person"><img class="img" src="media/usr0.png"></div>
                </div>
            <%}%>
        </div>
        <div class="get-back">
            <h2 id="get-back">To get back -</h2>
            <% for (i=1; i<get_back.length; i++){%>
                <div class="debtBox"> 
                    <div class="category" style="background-color:<%=get_back[0]%>"><img class="img" src="media/<%=get_back[i][0]%>"></div>
                    <div class="amount-neg"><%=get_back[i][1]%> $</div> 
                    <div class="date"> due since <%=get_back[i][2]%> </div>
                    <div class="person"><img class="img" src="media/usr0.png"></div>
                </div>
            <%}%>
        </div>
    </div>
</div>


            

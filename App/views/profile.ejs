<link rel="stylesheet" href="css/profile.css">

<div id="container">
    <div id="header">
        <!-- this shall contain the app name, and the user profile overview -->
        <div class="my-profile">
            <button id="back-btn" type="submit"><</button>
            <div id="title">My Profile</div>
        </div>
    </div>

    <div id="body">
        
        <div class="profile"> 
            <div class="name"><%=user%></div>
            <div class="current-user">
                <img class="img_icon" src="media/<%=icon%>">
            </div>
        </div>  

        <!-- to display a message if there is no travel yet-->
        <% if (trips.length == 0){%>
            <div id="empty">No travel yet!</div>
            <div id="empty"><img class="img_no_debt" src="media/no-travelling.png"></div>
        <%}%>

        <% for (i=0; i<trips.length; i++){ %>
            <div class="trip-list">
                <div class="trip-header">
                    <h2 class="destination" id="trip<%=i%>"><%=trips[i]%></h2>
                    <div class="dropdown">
                        <%if(usr_role[i]!="creator"){%>
                            <button class="dropbtn" id="dropdown<%=i%>" onclick="Toggle('dropdown<%=i%>')"><%=usr_role[i]%></button>
                            <div class="dropdown-content" onmouseleave="Hide('dropdown<%=i%>')">
                                <%for(var k=0; k<roles.length; k++){%>
                                <a onclick="ChooseRole('<%=roles[k]%>','<%=i%>')"><%=roles[k]%></a>
                                <%}%>
                            </div>
                        <%} else {%>
                            <div class="creator-txt">Creator</div>
                        <%}%>
                    </div>
                </div>
                <%for (j=0; j<expenses.length; j++){%>
                    <% if (expenses[j][0] == trips[i]){%>
                        <%for (k=1; k<expenses[j].length; k++){%>
                            <div class="expenseBox"> 
                                <div class="category"><img class="img" src="media/<%=expenses[j][k][0]%>"></div>
                                <div class="amount"><%=expenses[j][k][1]%>$ </div> 
                            </div>
                        <%}%>
                    <%}%>
                <%}%>
            </div>
        <%}%>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="js/profile.js"></script>